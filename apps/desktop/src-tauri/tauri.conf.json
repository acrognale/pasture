{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pasture",
  "version": "0.1.1",
  "identifier": "com.acrognale.pasture",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:5173",
    "beforeDevCommand": "npm run vite:dev -w @pasture/desktop",
    "beforeBuildCommand": "npm run vite:build"
  },
  "app": {
    "windows": [
      {
        "title": "Pasture",
        "width": 1100,
        "height": 720,
        "minWidth": 950,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "backgroundColor": "#fcfcfc",
        "transparent": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:window:allow-start-dragging"
          ]
        },
        {
          "identifier": "codex-events",
          "windows": [
            "*"
          ],
          "permissions": [
            {
              "identifier": "core:event:allow-listen",
              "options": {
                "events": [
                  "codex-event",
                  "codex:window:contextUpdated"
                ]
              }
            },
            {
              "identifier": "core:event:allow-unlisten",
              "options": {
                "events": [
                  "codex-event",
                  "codex:window:contextUpdated"
                ]
              }
            }
          ]
        },
        {
          "identifier": "window-control",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:window:allow-close"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
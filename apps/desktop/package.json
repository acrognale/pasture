{
  "name": "@pasture/desktop",
  "version": "0.2.0",
  "private": true,
  "description": "Pasture desktop GUI for Codex",
  "type": "module",
  "scripts": {
    "build": "tauri build",
    "copy:app": "ditto ../../target/release/bundle/macos/Pasture.app /Applications/Pasture.app",
    "dev": "tauri dev --config src-tauri/tauri.dev.conf.json",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "format:rust": "cd src-tauri/ && cargo fmt -- --config imports_granularity=Item",
    "generate:types": "cd src-tauri && cargo run --bin ts-export --quiet",
    "knip": "knip",
    "lint": "eslint .",
    "package": "tauri build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "tauri": "tauri",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "vite:build": "vite build",
    "vite:dev": "vite"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.rs": [
      "scripts/fmt-staged-rust.sh"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.7",
    "@tanstack/react-router": "^1.135.2",
    "@tanstack/router-plugin": "^1.135.0",
    "@tauri-apps/api": "^2.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.553.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^9.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-breaks": "^4.0.0",
    "remark-directive": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.0.7",
    "@storybook/addon-docs": "^10.0.7",
    "@storybook/addon-links": "^10.0.7",
    "@storybook/react-vite": "^10.0.7",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@tauri-apps/cli": "^2.8.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitest/coverage-v8": "^3.0.5",
    "babel-plugin-react-compiler": "^1.0.0",
    "jsdom": "^26.0.0",
    "knip": "^5.69.0",
    "storybook": "^10.0.7",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.20",
    "vitest": "^3.0.5"
  }
}
